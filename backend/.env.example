# ============================================
# ENVIRONMENT CONFIGURATION - EXAMPLE
# ============================================
# Copiar este archivo a .env y configurar valores reales

# Environment
NODE_ENV=development

# Server
PORT=3001

# Database
# Para Prisma Local Postgres (más fácil para desarrollo):
# DATABASE_URL="prisma+postgres://localhost:51213/?api_key=TU_API_KEY"
#
# Para PostgreSQL regular:
DATABASE_URL="postgresql://usuario:password@localhost:5432/peritos_db?schema=public"

# JWT Configuration
JWT_SECRET=CAMBIAR_ESTO_POR_UN_SECRET_SEGURO_EN_PRODUCCION
JWT_EXPIRES_IN=24h

# CORS
FRONTEND_URL=http://localhost:3000

# Logs
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
